<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:elevation="16dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/car_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                tools:src="@drawable/splash_hero" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    tools:text="Å koda Kodiaq"
                    android:layout_marginHorizontal="16dp"/>

                <TextView
                    android:id="@+id/rental_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/strong_grey"
                    android:textSize="12sp"
                    tools:text="Pending"
                    android:layout_marginHorizontal="16dp"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/circle_background_green"
                    />

                <TextView
                    android:id="@+id/rental_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/strong_grey"
                    android:textSize="12sp"
                    tools:text="Nov 11 - Nov 13, 2021"
                    android:layout_marginHorizontal="16dp"
                    android:drawablePadding="8dp"
                    app:drawableStartCompat="@drawable/calendar_icon"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>